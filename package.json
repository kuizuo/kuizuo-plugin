{
	"name": "vscode-extension-sample",
	"displayName": "Vscode Extension",
	"description": "a vscode extension sample by kuizuo",
	"keywords": [
		"vscode",
		"extension",
		"demo"
	],
	"version": "1.0.5",
	"author": {
		"name": "kuizuo",
		"email": "hi@kuizuo.cn"
	},
	"repository": "https://github.com/kuizuo/vscode-extension",
	"publisher": "kuizuo",
	"categories": [
		"Other"
	],
	"icon": "public/logo.png",
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "vscode-extension",
			"properties": {
				"kuizuoPlugin.showTip": {
					"type": "boolean",
					"default": true,
					"description": "是否在每次启动时显示欢迎提示！"
				}
			}
		},
		"commands": [
			{
				"command": "vscode-extension.helloWorld",
				"title": "Hello World",
				"icon": {
					"light": "public/lollipop.svg",
					"dark": "public/lollipop.svg"
				}
			},
			{
				"command": "vscode-extension.openWebview",
				"title": "打开Webview",
				"icon": {
					"light": "public/logo.png",
					"dark": "public/logo.png"
				}
			}
		],
		"keybindings": [
			{
				"command": "cursorUp",
				"win": "shift+alt+i",
				"mac": "ctrl+shift+cmd+i",
				"when": "textInputFocus"
			},
			{
				"command": "cursorDown",
				"win": "shift+alt+k",
				"mac": "ctrl+shift+cmd+k",
				"when": "textInputFocus"
			},
			{
				"command": "cursorLeft",
				"win": "shift+alt+j",
				"mac": "ctrl+shift+cmd+j",
				"when": "textInputFocus"
			},
			{
				"command": "cursorRight",
				"win": "shift+alt+l",
				"mac": "ctrl+shift+cmd+l",
				"when": "textInputFocus"
			},
			{
				"command": "cursorHome",
				"win": "shift+alt+h",
				"mac": "ctrl+shift+cmd+h",
				"when": "textInputFocus"
			},
			{
				"command": "cursorEnd",
				"win": "shift+alt+;",
				"mac": "ctrl+shift+cmd+;",
				"when": "textInputFocus"
			},
			{
				"command": "editor.action.quickFix",
				"win": "alt+oem_period",
				"when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
			},
			{
				"command": "editor.action.autoFix",
				"win": "shift+alt+enter",
				"when": "editorTextFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)quickfix\\b/"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "vscode-extension.helloWorld",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "vscode-extension.openWebview",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "vscode-extension.newFile",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "demo",
					"title": "愧怍",
					"icon": "public/lollipop.svg"
				}
			]
		},
		"views": {
			"demo": [
				{
					"id": "view1",
					"name": "视图1"
				},
				{
					"id": "view2",
					"name": "视图2"
				}
			]
		},
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "vue",
				"path": "./snippets/vue.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.43.0",
		"@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
    "mocha": "^10.0.0",
		"typescript": "^4.6.3",
    "vsce": "^2.7.0"
	},
	"engines": {
		"vscode": "^1.43.0"
	},
	"preview": true
}